{{ define "body" }}
<div class="container">
    <div class="section">
        <h1 class="header center orange-text">Release Guidelines Checks</h1>
    </div>
    <ul class="collapsible">
        {{ range .Checks }}
        <li>
            <div class="collapsible-header"><a href="{{ .Product.LeadingRepo }}">{{ .Product.Name }}</a></div>
            <div class="collapsible-body">
                {{ range .Product.Repositories }}
                <div class="row">
                    <ul>
                        <li>{{ . }}</li>
                    </ul>
                </div>
                {{ end }}
            </div>
        </li>
        {{ end }}
    </ul>

    <div class="divider"></div>
    <div class="section">
        <h3>Unhandled Repositories:</h3>
        <ul>
            {{ range .UnhandledRepos }}
            <div class="chip"><a href="{{ .URL }}">{{ .Name }}</a></div>
            {{ end }}
        </ul>
    </div>
</div>
{{ end }}